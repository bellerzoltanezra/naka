RewriteEngine On

# Force HTTPS (opcionális, but ajánlott)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Domain-specific navigation fix
# Ha valaki nakavision.com-on próbál magyar oldalakat elérni, redirect az angol verzióra
RewriteCond %{HTTP_HOST} ^(www\.)?nakavision\.com$ [NC]
RewriteRule ^(register|support)$ /$1.html [L]

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Remove .html if accessed directly
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R=301]

# Handle trailing slashes
RewriteRule ^([^/]+)/$ /$1 [R=301,L]

# Custom error pages (opcionális)
ErrorDocument 404 /404.html